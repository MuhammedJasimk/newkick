<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Add a User</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <form action="/admin/addUser" method="post">
                    {{#if userErr}}
                    <p class="text-danger">{{userErr}}</p>
                    {{/if}}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-12 col-form-label">Username</label>
                                <div class="col-sm-12">
                                    <input class="form-control" placeholder="Enter Username" onkeyup="validatename()"
                                        type="text" name="Username" id="username">
                                    <span id="username-err" class=" text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-tel-input" onkeyup="validatemobile()"
                                    class="col-sm-12 col-form-label">mobile Number</label>
                                <div class="col-sm-12">
                                    <input class="form-control" placeholder="Enter Mobile Number" value="+91"
                                        type="text" onkeyup="validatemobile()" name="mobileNumber"
                                        id="mobilenumber">
                                    <span id="mobilenumber-err" class=" text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-12 col-form-label">Email</label>
                                <div class="col-sm-12">
                                    <input class="form-control" type="email" onkeyup="validateEmail()"
                                        placeholder="Enter Email Id" name="Email" id="emailid">
                                    <span id="emailid-err" class=" text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-password-input" class="col-sm-12 col-form-label">Password</label>
                                <div class="col-sm-12">
                                    <input class="form-control" onkeyup="validatepassword()" name="Password"
                                        type="password" placeholder="Enter Password" id="password">
                                    <span id="password-err" class=" text-danger"></span>
                                </div>
                            </div>

                            <div class="text-right">
                                <button type="submit" class="btn btn-light waves-effect mr-4">Cancel</button>
                                <button type="submit" onclick="return validateForm()"
                                    class="btn btn-success waves-effect waves-light">Save</button>

                            </div>
                        </div>
                </form>
            </div>

        </div>
    </div>
</div> <!-- end col -->
</div>