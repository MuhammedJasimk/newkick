<div class="row mt-4">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">

                <h1 class="mt-0 header-title">Sales Report</h1>
                <p class="sub-title../plugins">
                </p>
                <div class="col-md-6 mb-3">
                    <form action="/admin/sales_resport_dateWise" method="post">
                    <div class="input-daterange input-group" id="date-range">
                        <input type="date" class="form-control" name="start" placeholder="Start Date" />
                        <input type="text" class="form-control text-center" value="TO"  readonly style="width:20px;"
                            placeholder="Start Date" />
                        <input type="date" class="form-control" name="end" placeholder="End Date" />
                        <button type="submit" class="btn ml-3 btn-success">Search</button>
                    </div>
                    </form>
                </div>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Item</th>
                            <th>User</th>
                            <th>Price</th>
                            <th>Qty</th>
                            <th>Total</th>
                            {{!-- <th>Start date</th> --}}
                            {{!-- <th>Salary</th> --}}
                        </tr>
                    </thead>


                    <tbody>
                        {{#each sales}}
                        <tr>
                            <td>{{this.date}}</td>
                            <td>
                                <div class="media">
                                    <div class="thumb float-left">
                                        <a href="#">
                                            <img class="sales_report rounded-circle"
                                                src="/images/product/{{this.image.[0]}}" alt="">
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        {{this.name}}
                                    </div>
                                </div>

                            </td>
                            <td>
                                {{this.userName}}<br>
                                {{this.Email}}
                            </td>
                            <td>
                               <p>Price :<span> {{this.price}}</span></p> 
                               <p>discounted Price :<span> {{this.discounted_price}}</span></p> 
                               <p>Coupon :<span> {{this.coupon}}</span></p> 
                                </td>
                            <td>{{this.qty}}</td>
                            <td>{{this.Total}}</td>
                            {{!-- <td>2011/04/25</td> --}}
                            {{!-- <td>$320,800</td> --}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
    </div> <!-- end col -->
</div>