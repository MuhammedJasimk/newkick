                        <div class="form-group col-md-6">
                            <label for="example-text-input" class="col-sm-12 col-form-label">Sub Category Name</label>
                            <div class="col-sm-12">
                                <input class="form-control" placeholder="Enter Username" type="text" name="SubCategoryname">
                                {{!-- <span id="username-err" class=" text-danger"></span> --}}
                            </div>
                        </div>
                        <div class="form-group  col-md-6">
                            <label class="col-sm-12 col-form-label">Status</label>
                            <div class="col-sm-12">
                                <select name="status" class="form-control">
                                    <option>Select</option>
                                    <option>Active</option>
                                    <option>Deactive</option>
                                </select>
                            </div>
                        </div>

                        <div class="text-right mt-3 col-md-12">
                            <button type="submit" class="btn btn-light waves-effect mr-4">Cancel</button>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>

                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>


